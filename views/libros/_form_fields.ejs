<div>
    <label>Titulo</label> <!--etiqueta para titulo de libro-->
    <input type="text" name="titulo" value="<%= libro.titulo %>">
</div>
<div>
    <label>Autor</label>
    <select name="autor">
    <% autores.forEach(autor => { %> <!--metodo de busqueda del index de libros el cual sera usado a manera de referencia para los autores del libro-->
        <% if(autor.id === libro.autor) {%> <!--ciclo para seleccion de autor para libro-->
            <option selected label="<%= autor.nombre %>" value="<%= autor.id %>"><!--en la parte de las opciones se mostraran los docentes por nombre y se buscaran por su id-->
        <% } else { %>
            <option label="<%= autor.nombre %>" value="<%= autor.id %>">
        <% } %>   
    <% }) %>    
    </select>
</div>
<div>
    <label>Fecha de Publicacion</label><!--etiqueta para fecha de publicacion-->
    <input type="date" name="Fecha_publicacion" 
            value="<%= libro.Fecha_publicacion == null ? '':
            libro.Fecha_publicacion.toISOString().split('T')[0] %>"><!--si el estado de la fecha de publicacion nulo
            retornara la cadena vacia, pero si no es nulo : convertira la fecha al formato
            2021-09-08 aparte de agregar el tiempo-->
</div> 
<div>
    <label>Total de Paginas</label> <!--etiqueta para conteo de paginas-->
    <input type="number" name="No_paginas" min="1" value="<%= libro.No_paginas %>">
</div>
<div>
    <label>Portada</label> <!--etiqueta portada del libro-->
    <input type="file" name="portada">
</div>
<div>
    <label>Descripcion</label> <!--etiqueta para descripcion-->
    <textarea name="descripcion"><%= libro.descripcion %></textarea>
</div>        

